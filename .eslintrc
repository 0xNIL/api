{
  "env": {
    // in CommonJS
    "node": true,
    // browser
    "browser": true,
    // mocha
    "mocha": true
  },
  "globals": {},
  "rules": {
    "semi": [
      2,
      "never"
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "strict": [
      2,
      "never"
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "eqeqeq": [
      2,
      "smart"
    ],
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ]
}
